{% extends 'base.html.twig' %}

{% block title %}Logboek{% endblock %}

{% block body %}
    <h1>Logboek</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ logboek.id }}</td>
            </tr>
            <tr>
                <th>Brief_nr</th>
                <td>{{ logboek.BriefNr }}</td>
            </tr>
            <tr>
                <th>Datum</th>
                <td>{{ logboek.Datum ? logboek.Datum|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Lading</th>
                <td>{{ logboek.Lading }}</td>
            </tr>
            <tr>
                <th>Laadplaats</th>
                <td>{{ logboek.Laadplaats }}</td>
            </tr>
            <tr>
                <th>Vertrektijd</th>
                <td>{{ logboek.Vertrektijd ? logboek.Vertrektijd|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Bestemming</th>
                <td>{{ logboek.Bestemming }}</td>
            </tr>
            <tr>
                <th>Evenement</th>
                <td>{{ logboek.Evenement }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('logboek_index') }}">back to list</a>

    <a href="{{ path('logboek_edit', {'id': logboek.id}) }}">edit</a>

